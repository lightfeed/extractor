{
  "name": "lightfeed-extract",
  "version": "0.1.0",
  "description": "A library to extract structured data from HTML/markdown using LLMs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:local": "ts-node src/dev/runLocalTest.ts",
    "test:usage": "ts-node src/dev/testUsage.ts",
    "test:html2md": "jest tests/integration/html-to-markdown.test.ts",
    "test:html2md:update": "git submodule update --init --recursive test-data",
    "test:html2md:sync": "cd test-data && git pull origin main && cd ..",
    "lint": "tslint -p tsconfig.json",
    "dev": "ts-node src/example.ts",
    "dev:html2md": "ts-node src/dev/testHtmlToMarkdown.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightfeed/lightfeed-extract.git"
  },
  "keywords": [
    "llm",
    "extraction",
    "html",
    "markdown",
    "structured-data",
    "openai",
    "gemini"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lightfeed/lightfeed-extract/issues"
  },
  "homepage": "https://github.com/lightfeed/lightfeed-extract#readme",
  "dependencies": {
    "@langchain/google-genai": "^0.2.5",
    "@langchain/openai": "^0.5.10",
    "cheerio": "^1.0.0",
    "jsonrepair": "^3.12.0",
    "langchain": "^0.3.24",
    "turndown": "^7.2.0",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.34",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.3",
    "@types/turndown": "^5.0.5",
    "@types/xmldom": "^0.1.34",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
